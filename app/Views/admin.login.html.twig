<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<title>Авторизация - Админпанель</title>
	<link rel="stylesheet" href="{{baseUrl()}}/css/admin.css">
</head>
<body>
	<section class="main-section-wrapper">
		<section class="main-section">
			<div class="logo-wrapper-abs">
				<div class="logo-wrapper-inner">
					<div class="enter-field">
						<form action="{{urlFor('admin_auth')}}" method="POST" id="auth-form">
							<div class="input-field">
								<label for="login">
									<input type="text" id="login" placeholder="Логин" name="username">
								</label>
							</div>
							<div class="input-field">
								<label for="password">
									<input type="password" id="password" placeholder="Пароль" name="password">
								</label>
							</div>
							<div class="bnt-enter">
								<label for="submit">
									<input type="submit" id="submit" value="Войти">
								</label>
							</div>
						</form>
					</div>
				</div>
			</div>
		</section>
	</section>
	<script src="{{baseUrl()}}/javascript/jquery-1.12.4.min.js"></script>
	<script src="{{baseUrl()}}/javascript/login.js"></script>
</body>
</html>